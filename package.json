{
  "name": "@sotilab/smo",
  "version": "1.0.5",
  "description": "A powerful CLI tool to organize photos and videos based on their creation date and metadata, with support for duplicate detection and customizable directory structure.",
  "publishConfig": {
    "access": "public"
  },
  "main": "index.ts",
  "type": "module",
  "bin": {
    "smo": "./dist/index.js"
  },
  "scripts": {
    "start": "bun run index.ts",
    "build": "bun build index.ts --outdir dist --target node --external lmdb --external sharp --external exiftool-vendored --external fluent-ffmpeg",
    "start:node": "node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint ."
  },
  "author": "shtse8",
  "license": "MIT",
  "dependencies": {
    "exiftool-vendored": "^24.4.0",
    "fluent-ffmpeg": "^2.1.3",
    "lmdb": "^3.0.13",
    "sharp": "^0.33.4"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "@datastructures-js/heap": "^4.3.3",
    "@topcli/spinner": "^2.1.2",
    "@types/cli-progress": "^3.11.6",
    "async-mutex": "^0.5.0",
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "commander": "^9.4.0",
    "node-addon-api": "^8.1.0",
    "node-gyp": "^10.2.0",
    "lint-staged": "^15.2.9",
    "@eslint/js": "^9.9.0",
    "@types/bun": "latest",
    "eslint": "^9.9.0",
    "globals": "^15.9.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.1.0",
    "husky": "^9.1.4"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "bun": ">=0.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shtse8/SotiMediaOrganizer.git"
  },
  "keywords": [
    "photo",
    "video",
    "organizer",
    "cli",
    "exif",
    "metadata",
    "date",
    "bun",
    "typescript"
  ]
}
